{
  "name": "briefkasten-extension",
  "version": "0.5.2",
  "description": "Companion extension for the briefkasten bookmark service",
  "license": "MIT",
  "author": "ndom91 <yo@ndo.dev>",
  "contributors": [
    "Sascha Ißbrücker"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ndom91/briefkasten-extension.git"
  },
  "bugs": {
    "url": "https://github.com/ndom91/briefkasten-extension/issues"
  },
  "homepage": "https://github.com/ndom91/briefkasten-extension#readme",
  "scripts": {
    "build": "rollup -c",
    "build-ff": "rollup -c --firefox",
    "dev": "rollup -c -w"
  },
  "dependencies": {
    "svelte": "^3.48.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lint-staged": "^12.4.1",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "rollup": "^2.74.1",
    "rollup-plugin-chrome-extension": "^3.6.9",
    "rollup-plugin-empty-dir": "^1.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-zip": "^1.0.3",
    "simple-git-hooks": "^2.7.0",
    "tailwindcss": "^3.0.24"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "singleQuote": true,
    "bracketSpacing": true
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{cjs,js,css,json}": [
      "prettier --write"
    ],
    "*.{cjs,js}": [
      "eslint --fix"
    ]
  }
}
